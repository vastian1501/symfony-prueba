{% extends 'base.html.twig' %}

{% block title %}Crear cuenta{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/auth/auth.css') }}">
{% endblock %}

{% block body %}
<div class="auth">
    <div class="auth__wrapper">
        <main class="auth__main">
            <div class="auth-card">
                <h2 class="auth-card__title">Crea una nueva cuenta</h2>

                {% if registrationForm.vars.errors|length > 0 %}
                    <div class="auth-alert auth-alert--error">
                        <svg class="auth-alert__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        <div class="auth-alert__text">
                            {{ form_errors(registrationForm) }}
                        </div>
                    </div>
                {% endif %}

                {{ form_start(registrationForm, {'attr': {'class': 'auth-form', 'novalidate': 'novalidate'}}) }}
                
                    <div class="form-group">
                        {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'form-group__label'}}) }}
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-group__input', 'placeholder': 'name@example.com'}}) }}
                        <div class="form-error-message">
                            {{ form_errors(registrationForm.email) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'form-group__label'}}) }}
                        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-group__input', 'placeholder': 'At least 6 characters'}}) }}
                        <div class="form-error-message">
                            {{ form_errors(registrationForm.plainPassword) }}
                        </div>
                        <p class="form-group__hint">Las contraseñas deben tener al menos 6 caracteres.</p>
                    </div>

                    <button class="btn btn--primary btn--full" type="submit">
                        Crear cuenta
                    </button>

                    <div class="form-group form-group--checkbox">
                        <label class="form-checkbox">
                            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-checkbox__input'}}) }}
                            <span class="form-checkbox__checkmark"></span>
                            <span class="form-checkbox__label">
                                Estoy de acuerdo con los Términos de Servicio
                            </span>
                        </label>
                        <div class="form-error-message">
                            {{ form_errors(registrationForm.agreeTerms) }}
                        </div>
                    </div>

                {{ form_end(registrationForm) }}

                <div class="auth-card__footer">
                    <p class="auth-card__terms">
                        ¿Ya tienes cuenta? 
                        <a href="{{ path('app_login') }}" class="auth-card__link">Inicia sesión</a>
                    </p>
                </div>
            </div>
        </main>
    </div>
</div>
{% endblock %}