{% extends 'base.html.twig' %}

{% block title %}
  Iniciar sesión
{% endblock %}

{% block stylesheets %}
  <link rel="stylesheet" href="{{ asset('styles/auth/auth.css') }}" />
{% endblock %}

{% block body %}
  <div class="auth">
    <div class="auth__wrapper">
      <main class="auth__main">
        <div class="auth-card">
          <h2 class="auth-card__title">Inicia sesión</h2>

          {% if error %}
            <div class="auth-alert auth-alert--error">
              <svg class="auth-alert__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <p class="auth-alert__text">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
            </div>
          {% endif %}

          {% if app.user %}
            <div class="auth-alert auth-alert--success">
              <svg class="auth-alert__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <p class="auth-alert__text">
                You are logged in as {{ app.user.userIdentifier }}
                <a href="{{ path('app_logout') }}" class="auth-alert__link">Logout</a>
              </p>
            </div>
          {% endif %}

          <form method="post" class="auth-form">
            <div class="form-group">
              <label for="inputEmail" class="form-group__label">Correo electrónico </label>
              <input type="email" value="test@test.com" name="email" id="inputEmail" class="form-group__input" autocomplete="email" required autofocus />
            </div>

            <div class="form-group">
              <div class="form-group__label-wrapper">
                <label for="inputPassword" class="form-group__label">Contraseña</label>
              </div>
              <input type="password" name="password" id="inputPassword" value="password" class="form-group__input" autocomplete="off" required />
            </div>

            <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}" />

            <button class="btn btn--primary btn--full" type="submit">Continuar</button>

            <div class="form-group form-group--checkbox">
              <label class="form-checkbox">
                <input type="checkbox" name="_remember_me" class="form-checkbox__input" />
                <span class="form-checkbox__checkmark"></span>
                <span class="form-checkbox__label">Mantener la sesión iniciada</span>
              </label>
            </div>
          </form>
        </div>

        <div class="auth-divider">
          <span class="auth-divider__text">¿No tienes cuenta?</span>
        </div>

        <div class="register-link">
            <a href="{{ path('app_register') }}" class="btn btn--secondary btn--full">Crear una nueva cuenta</a>
        </div>
      </main>
    </div>
  </div>
{% endblock %}
